# LMS Backend Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Database Configuration
MONGO_URL=mongodb://localhost:27017/lms_dev
MONGO_USERNAME=your-mongo-username
MONGO_PASSWORD=your-mongo-password
DB_NAME=lms_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration - REQUIRED FOR ALL ENVIRONMENTS
# Generate secure random strings for production
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-minimum-256-bits
ACCESS_EXPIRE_MIN=30
REFRESH_EXPIRE_DAYS=14

# AI Configuration - REQUIRED FOR PRODUCTION
GEMINI_API_KEY=your-gemini-api-key-here
DEFAULT_LLM_MODEL=gemini-1.5-flash

# Service URLs for inter-service communication
AUTH_SERVICE_URL=http://auth-service:8001
COURSE_SERVICE_URL=http://course-service:8002
USER_SERVICE_URL=http://user-service:8003
AI_SERVICE_URL=http://ai-service:8004
ASSESSMENT_SERVICE_URL=http://assessment-service:8005
ANALYTICS_SERVICE_URL=http://analytics-service:8006
NOTIFICATION_SERVICE_URL=http://notification-service:8007
FILE_SERVICE_URL=http://file-service:8008

# Email Configuration (for production)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage (MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000

# Monitoring
GRAFANA_PASSWORD=admin

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
DB_CONNECTION_POOL_RECYCLE=3600
DB_READ_PREFERENCE=primary

# MongoDB Root Password (for Docker)
MONGO_ROOT_PASSWORD=your-secure-mongo-root-password

# Performance Settings
DB_CONNECTION_POOL_SIZE=10
DB_QUERY_TIMEOUT_SECONDS=30
CACHE_ENABLED=true